<div class="ui top attached borderless menu">
  <div class="header item">Admin Coins</div>
  <div class="right menu">
    <div class="item">
      <%= link_to 'New Admin Coin', new_admin_coin_path, class: 'ui teal button' %>
    </div>
  </div>
</div>

<%= render 'filter' %>

<table class="ui bottom attached table">
  <thead>
    <tr>
      <th><%= Coin.human_attribute_name(:id) %></th>
      <th><%= Coin.human_attribute_name(:amount) %></th>
      <th><%= Coin.human_attribute_name(:income_amount) %></th>
      <th><%= Coin.human_attribute_name(:expense_amount) %></th>
      <th><%= Coin.human_attribute_name(:position) %></th>
      <th><%= Coin.human_attribute_name(:user) %></th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
  <% @coins.each do |coin| %>
    <tr>
      <td><%= coin.id %></td>
      <td><%= coin.amount %></td>
      <td>
        <%= link_to coin.income_amount, admin_reward_expenses_path(user_id: coin.user_id) %>
      </td>
      <td>
        <%= link_to coin.expense_amount, admin_coin_exchanges_path(user_id: coin.user_id) %>
      </td>
      <td><%= coin.position %></td>
      <td>
        <%= link_to coin.user.name, admin_user_path(coin.user_id) %>
      </td>
      <td class="ui labels">
        <%= link_to admin_coin_path(coin), data: { tooltip: t('.show') }, class: 'ui blue mini icon button' do %>
          <i class="location arrow icon"></i>
        <% end %>
        <%= link_to edit_admin_coin_path(coin), data: { tooltip: t('.edit') }, class: 'ui pink mini icon button' do %>
          <i class="pencil alternate icon"></i>
        <% end %>
        <%= link_to admin_coin_path(coin), method: :delete, data: { tooltip: t('.destroy'), confirm: 'Are you sure?' }, class: 'ui red mini icon button' do %>
          <i class="times icon"></i>
        <% end %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

<%= paginate @coins %>
