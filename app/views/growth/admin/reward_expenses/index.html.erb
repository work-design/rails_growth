<div class="ui segment breadcrumb">
  <%= link_to 'Back', admin_rewards_path, class: 'section' %>
  <div class="divider">/</div>
  <div class="action section">expenses</div>
</div>

<div class="ui top attached borderless menu">
  <div class="header item">Admin Reward Expenses</div>
</div>

<%= render 'filter' %>

<table class="ui bottom attached table">
  <thead>
    <tr>
      <th><%= RewardExpense.human_attribute_name(:id) %></th>
      <th><%= RewardExpense.human_attribute_name(:amount) %></th>
      <th><%= RewardExpense.human_attribute_name(:aim) %></th>
      <th><%= RewardExpense.human_attribute_name(:user) %></th>
      <th><%= RewardExpense.human_attribute_name(:aim_entity) %></th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
  <% @reward_expenses.each do |reward_expense| %>
    <tr>
      <td><%= reward_expense.id %></td>
      <td><%= reward_expense.amount %></td>
      <td>
        <%= reward_expense.aim&.name %>
      </td>
      <td>
        <%= reward_expense.user&.name %>
      </td>
      <td>
        <%= reward_expense.aim_entity_id %>
      </td>
      <td class="ui labels">
        <%= link_to edit_admin_reward_expense_path(reward_expense), data: { tooltip: t('.edit') }, class: 'ui pink mini icon button' do %>
          <i class="pencil alternate icon"></i>
        <% end %>
        <%= link_to admin_reward_expense_path(reward_expense), method: :delete, data: { tooltip: t('.destroy'), confirm: 'Are you sure?' }, class: 'ui red mini icon button' do %>
          <i class="times icon"></i>
        <% end %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

<%= paginate @reward_expenses %>
