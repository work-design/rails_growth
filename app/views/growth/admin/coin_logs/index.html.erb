<div class="ui top attached borderless menu">
  <div class="header item">Admin Coin Logs</div>
  <div class="right menu">
    <div class="item">
      <%= link_to 'New Admin Coin Log', new_admin_coin_log_path, class: 'ui teal button' %>
    </div>
  </div>
</div>

<%= render 'filter' %>

<table class="ui bottom attached table">
  <thead>
    <tr>
      <th><%= CoinLog.human_attribute_name(:id) %></th>
      <th><%= CoinLog.human_attribute_name(:title) %></th>
      <th><%= CoinLog.human_attribute_name(:amount) %></th>
      <th><%= CoinLog.human_attribute_name(:user) %></th>
      <th><%= CoinLog.human_attribute_name(:source_type) %></th>
      <th><%= CoinLog.human_attribute_name(:source_id) %></th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
  <% @coin_logs.each do |coin_log| %>
    <tr>
      <td><%= coin_log.id %></td>
      <td><%= coin_log.title %></td>
      <td><%= coin_log.amount %></td>
      <td><%= coin_log.user %></td>
      <td><%= coin_log.source_type %></td>
      <td><%= coin_log.source_id %></td>
      <td class="ui labels">
        <%= link_to admin_coin_log_path(coin_log), data: { tooltip: t('.show') }, class: 'ui blue mini icon button' do %>
          <i class="location arrow icon"></i>
        <% end %>
        <%= link_to edit_admin_coin_log_path(coin_log), data: { tooltip: t('.edit') }, class: 'ui pink mini icon button' do %>
          <i class="pencil alternate icon"></i>
        <% end %>
        <%= link_to admin_coin_log_path(coin_log), method: :delete, data: { tooltip: t('.destroy'), confirm: 'Are you sure?' }, class: 'ui red mini icon button' do %>
          <i class="times icon"></i>
        <% end %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

<%= paginate @coin_logs %>
